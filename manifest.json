{
  "manifest_version": 3,
  "name": "chrome-lan-share",
  "description": "Peer-to-peer LAN message & file sharing between Chrome browser instances (manual or automated signaling).",
  "version": "1.0.0",
  "author": "LiteObject <Lite.Object@gmail.com>",
  "homepage_url": "https://github.com/LiteObject/chrome-lan-share",
  "action": {
    "default_title": "chrome-lan-share"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon-data-sharing-16.png",
    "48": "icon-data-sharing-48.png",
    "128": "icon-data-sharing-128.png"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": []
}
